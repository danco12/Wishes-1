{block content}
<br><br>
{form signInForm}
		<div class="row">
			<div class="input-field col s12 m6 l6" style="padding-right: 0px;">
				{label username /}{input username}

			</div>
			<div class="input-field col s12 m6 l6" style="padding-right: 0px;">
				{label password /}{input password}
			</div>
		</div>
		<br>

		<div class="row">
			<div class="col s6 m6 l4">
				<a>{_messages.sign.forgotpass}</a><br>
				<a n:href="Sign:up">{_messages.sign.registration}</a>
			</div>
			<div class="col s6 m6 l4 offset-l4 waves-input-wrapper">
				<a class="btn button-green col l12 waves-effect waves-light" id="submit">{_messages.sign.signin}</a>
				{input send}
			</div>
		</div>
{/form}
